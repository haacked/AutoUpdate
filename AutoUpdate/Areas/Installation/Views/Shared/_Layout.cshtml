<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.4.4.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Areas/Installation/Scripts/autoupdate.js")" type="text/javascript"></script>
    <style>
         body { background-color: #006;}
    </style>
</head>

<body>
    <div style="display: none; margin: 0; font-size: 2em; border: solid 2px; background-color: #ffe; padding: 5px; text-align:center;" 
        data-autoupdate-check-url="/installation/updates/check/"
        data-autoupdate-upgrade-url="/installation/updates/upgrade/">
        <div class="template" style="display: none;">
            A new version '${Version}' of the website is available.<br />
            Click <a href="#" class="update">Upgrade</a>&nbsp; to upgrade the website.
        </div>
        <div class="success-template" style="display: none;">
            This app has successfully been upgraded to Version '${Version}'.<br />
            Great job!
        </div>
    </div>

    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Haack Web Auto Update Checker</h1>
            </div>

            <div id="logindisplay">
                &nbsp;
            </div>

            <div id="menucontainer">

                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>
